{% extends 'BiographyAdmin/index.html.twig' %}
{% block admin %}
    <section class=" container confirm">
        <h4>Voulez-vous vraiment supprimer cette biographie ?</h4>
        <form action="/BiographyAdmin/Delete/{{ data.id }}" method="post">
            <input type="hidden" name="id" value="{{ data.id }}">
        <div class="buttons"><button class="btn">OUI</button><a class="btn" href="/BiographyAdmin/Index">NON</a></div>
        </form>
    <hr>
        <div class="resp-table">
            <div class="resp-table-header">
                <div class="resp-table-row">
                    <div class="table-header-cell number">Id</div>
                    <div class="table-header-cell year">Ann√©e</div>
                    <div class="table-header-cell">Biographie</div>
                </div>
            </div>
        </div>
        {% block add %}
        {% endblock %}
        <div class="resp-table">
            <div class="resp-table-body">
                <div class="resp-table-row">
                    <div class="table-body-head-cell number">{{ data.id }}</div>
                    <div class="table-body-cell year">{{ data.date|date("Y") }}</div>
                    <div class="table-body-cell">{{ data.info }}</div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}