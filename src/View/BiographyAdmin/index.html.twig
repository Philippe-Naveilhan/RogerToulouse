{% extends 'Admin/index.html.twig' %}
{% block stylesheet %}
    <link rel="stylesheet" href="/assets/css/admin.css">
    <link rel="stylesheet" href="/assets/css/biographyAdmin.css">
{% endblock %}
{% block admin %}
    <section class="container">
        <table class="resp-table">
            <thead class="thead-dark">
            <tr>
                <th class="id" scope="col">Id</th>
                <th class="year" scope="col">Ann√©e</th>
                <th class="infos" scope="col">Biographie</th>
                <th class="option" scope="col">
                    <a class="btn" href="/BiographyAdmin/Add"><i class="fas fa-plus"></i></a>
                </th>
            </tr>
            </thead>
            <tbody>
            {% block add %}
            {% endblock %}
            {% for year, biographies in data %}
                {% for biography in biographies %}
                    {% if biography.id == id %}
                        {% block edit %}
                        {% endblock %}
                    {% else %}
                        <tr class="cell" id="{{ biography.id }}">
                            <th class="id" scope="row">{{ biography.id }}</th>
                            <td>{{ year }}</td>
                            <td class="cellinfo">{{ biography.info }}</td>
                            <td class="admArtLink">
                                <a class="btn" href="/BiographyAdmin/Edit/{{ biography.id }}#{{ biography.id }}"><i class="fas fa-edit"></i></a>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}