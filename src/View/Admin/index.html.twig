{% endblock %}

{% block content %}
    <nav class="leftNavBar col-1 ml-1 position-fixed">
        <div class="leftNavLinks link nav flex-column justify-content-between" id="v-pills-tab" aria-orientation="vertical">
            <a class="leftNavLink nav-link {{ active == 'home' ? 'active' : ''}}"
