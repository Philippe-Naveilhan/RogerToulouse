{% extends 'layout.html.twig' %}

{% block title %}Association{% endblock %}

 {% block stylesheet %}

     <link rel="stylesheet" href="/assets/css/association.css">
 {% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="contact_title">Nous Joindre</h2>
            </div>
        </div>
    </div>
    <div class="main_container ">
        <div class=" row justify-content-around">
            <div class="card col-md-3 ">
                <address class="row card-title">
                    <h3 class="in-contact-title">Contactez-nous</h3>
                    <p class="card-text"><i class="fas fa-phone-alt"> </i> 02 38 54 00 00</p>
                    <p class="card-text"><i class="fas fa-envelope"> </i> 2, impasse Notre-Dame du chemin,
                        45000,
                        Orléans
                    </p>
                    <p class="div_body card-text"><i class="fas fa-at"></i> 02 38 54 00 00 </p>
                </address>
            </div>
            <div class="form col-md-3">
                <form method="POST" action="">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="form-control" id="exampleFormControlInput1"
                               placeholder="name@example.com" required>
                    </div>
                    <div class="form-group">
                        <label for="object">Objet</label>
                        <input type="text" name="object" class="form-control" id="message"
                               placeholder="Demande de renseignements "
                               required>
                    </div>

                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" name="message" id="message" rows="3"
                                  required
                                  placeholder="Quand aura lieu la prochaine exposition sur l'artiste "></textarea>
                    </div>
                    <button>Envoyer !</button>
                </form>


            </div>
            <div class="card col-md-3">
                <img class="card-img-top" src="/assets/upload/{{ artworks.image }}" alt="œuvre de l'artiste">
                <div class="card-body">
                    <h3 class="title_card card-title">{{ artworks.name }}</h3>
                    <p class="card-text">{{ artworks.more_info }}</p>
                    <a href="#" class="btn btn-primary">Voir l'œuvre !</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
