<form method="post">
    <div class="form-group">
        <input type="hidden" value="{{ new.id }}" name="id">
    </div>
    <div class="form-group">
        <label for="title">Titre</label>
        <input type="text" value="{{ new.title }}" name="title" id="title"><br>
    </div>
    <div class="form-group">
        <label for="desc">Description de l'actu</label>
        <input type="text" value="{{ new.desc }}" name="desc" id="desc"><br>
    </div>
    <div class="form-group">
        <label for="button">Description du bouton</label>
        <input type="text" value="{{ new.button }}" name="button" id="button"><br>
    </div>
    <div class="form-group">
        <label for="button_link">Lien du bouton</label>
        <input type="text" value="{{ new.button_link }}" name="button_link" id="button_link"><br>
    </div>
    <input type="submit" value="Valider">
</form>

