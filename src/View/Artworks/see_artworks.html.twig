<div class="card-deck artworks">
    {% set card = 0 %}
    {% for artwork in artworks %}
    <div class="card">
        {% if card is even %}
        <a href="/Artworks/single/{{ artwork.id }}">
            <img src="/assets/images/{{ artwork.image }}" class="card-img-top" alt="{{ artwork.image }}">
        </a>
        {% endif %}
        <div class="card-body">
            <p class="card-title">
                {{ artwork.name }}
            </p>
            <p class="card-text more_info">
                {{ artwork.more_info }}
                {{  artwork.size }}
            </p>
        </div>
        {% if card is odd %}
            <a href="/Artworks/single/{{ artwork.id }}">
                <img src="/assets/images/{{ artwork.image }}" class="card-img-top" alt="{{ artwork.image }}">
            </a>
        {% endif %}
    </div>
    {%  set card=card+1 %}
    {% endfor %}
</div>
