{% extends 'Admin/index.html.twig' %}
{% block admin %}
<div class="container adminArtworks">
    {% if messages is not empty %}
        {% for message in messages %}
            <div class="message">
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}
    <a href="/ArtworksAdmin/add"><div class="btn">AJOUTER UNE OEUVRE</div></a>
    <table>
        <thead>
            <tr>
                <td class="id">ID</td>
                <td>Image</td>
                <td>Titre</td>
                <td>Type</td>
                <td>Ann√©e</td>
                <td>Carousel</td>
                <td>Description</td>
                <td>Infos+</td>
                <td>Taille</td>
                <td>Action</td>
            </tr>
        </thead>
        <tbody>
        {% for artwork in artworks %}
            <tr>
                <td class="id">{{ artwork.idArtwork }}</td>
                <td><img src="/assets/upload/{{ artwork.image }}" alt="{{ artwork.image }}"></td>
                <td>{{ artwork.name }}</td>
                <td>{{ artwork.category }}</td>
                <td>{{ artwork.date|date("Y") }}</td>
                <td>
                    {% if artwork.carousel == 1 %}
                        <div class="carousel"><i class="fas fa-check"></i></div>
                    {% endif %}
                </td>
                <td>
                    <div class="relative">
                        <div>{{ artwork.description }}</div>
                    </div>
                </td>
                <td>{{ artwork.more_info }}</td>
                <td>{{ artwork.size }}</td>
                <td>
                    <div>
                        <form action="/ArtworksAdmin/update/" method="post">
                            <input type="text" name="idArtwork" value="{{ artwork.idArtwork }}" hidden>
                            <input type="submit" value="MODIFIER" class="btn">
                        </form>
                    </div>
                    <div>
                        <form action="/ArtworksAdmin/delete/" method="post">
                            <input name="action" value="delete" hidden>
                            <input name="idArtwork" value="{{ artwork.idArtwork }}" hidden>
                            <input type="submit" value="SUPPRIMER" class="btn">
                        </form>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
