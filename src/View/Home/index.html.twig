{% extends 'layout.html.twig' %}

{% block content %}
    <div id="carouselFade" class="carousel container col-7 mb-5 slide carousel-fade" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="http://www.roger-toulouse.fr/peintre/45-48/photos/repasseu.jpg" class="d-block w-100 img-home"
                     alt="La Table de Repasseuse">
                <div class="carousel-caption d-none d-md-block">
                    <p class="slide-title">La Table de Repasseuse</p>
                    <p class="slide-text">1947 - Musée des Beaux-Arts d'Orléans</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="http://www.roger-toulouse.fr/peintre/58-71/photos/loire.jpg" class="d-block w-100 img-home" alt="La Loire">
                <div class="carousel-caption d-none d-md-block">
                    <p class="slide-title">La Loire</p>
                    <p class="slide-text">1965 - Collection particulière</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="http://www.roger-toulouse.fr/peintre/72-92/photos/naturec.jpg" class="d-block w-100 img-home" alt="Dans la Nature">
                <div class="carousel-caption d-none d-md-block">
                    <p class="slide-title">Dans la Nature</p>
                    <p class="slide-text">1980 - Collection particulière</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselFade" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselFade" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}



